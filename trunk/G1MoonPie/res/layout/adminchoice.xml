<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
   
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Admin Choices:"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <RadioGroup
        android:id="@+id/EventType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RadioButton
            android:id="@+id/UncompletedEvent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Uncompleted Event" />

        <RadioButton
            android:id="@+id/CompletedEvent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Complete Event" />
    </RadioGroup>

    <Button
        android:id="@+id/DisplayButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Display" 
        android:visibility="invisible"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/editText1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textVis1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remove all "
            android:textAppearance="?android:attr/textAppearanceMedium" 
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/texteventtype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="_____________"
            android:textAppearance="?android:attr/textAppearanceMedium" 
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/textVis2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Events"
            android:textAppearance="?android:attr/textAppearanceMedium" 
            android:visibility="invisible"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textVis3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="that are more than"
            android:textAppearance="?android:attr/textAppearanceMedium" 
            android:visibility="invisible"/>

        <EditText
            android:id="@+id/EditDaysText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="2"
            android:visibility="invisible">

            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/textVis4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="days old"
            android:textAppearance="?android:attr/textAppearanceMedium" 
            android:visibility="invisible"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
    </LinearLayout>

    <Button
        android:id="@+id/RemoveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:text="Remove" 
        android:visibility="invisible"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/editText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10" />

    </LinearLayout>

    <TextView
        android:id="@+id/textVis5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Complete all Uncompleated Events"
        android:textAppearance="?android:attr/textAppearanceMedium" 
        android:visibility="invisible"/>
    
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:id="@+id/textVis6" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1" android:text="that are more than" android:textAppearance="?android:attr/textAppearanceMedium" android:visibility="invisible"/>
        <EditText android:layout_weight="1" android:id="@+id/EditDaysText2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:ems="2" android:visibility="invisible"/>
        <TextView android:layout_weight="1" android:id="@+id/textVis7" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="days old" android:textAppearance="?android:attr/textAppearanceMedium" android:visibility="invisible"/>
    </LinearLayout>
    <Button android:id="@+id/CompleteButton" android:layout_width="wrap_content" android:layout_height="wrap_content" android:clickable="false" android:text="Complete" android:visibility="invisible"/>
    

</LinearLayout>